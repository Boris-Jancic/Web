<%- include("partials/header"); -%>

  <h1>Home</h1>
  <p><%= paragraphText %></p>

  <% posts.forEach(function(post) { %>
    <div name="item">
      <h1> <%= post.title %> </h1>
      <!-- Post text is shortend to 100 characters -->
      <p>
        <%= post.text.substring(0,100) + "..." %>
        <a href="/posts/<%= post.title %>">Read More</a>
      </p>
    </div>
  <% }); %>


<%- include("partials/footer"); -%>
